{
    "compilerOptions": {
      "target": "ES6",
      "module": "commonjs",
      "typeRoots": [
        "./node_modules/@types",
        "./types"
      ],
      "types": ["express-session"],
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true
    },
    "ts-node": {
      "files": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
  }
  